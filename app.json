{
    "name": "Meteor Boilerplate",
    "description": "Heroku Compatible Meteor Boilerplate with FlowRouter, Materialize and other default goodies",
    "repository": "https://github.com/cbanbury/boilerplate-meteor",
    "keywords": ["meteor", "mongodb", "FlowRouter", "Materialize", "boilerplate"],
    "buildpacks": [{
        "url": "https://github.com/AdmitHub/meteor-buildpack-horse.git"
    }],
    "addons": [
        "mongolab:sandbox"
    ],
    "env": {
        "ROOT_URL": {
            "description": "The https://your-app-name.herokuapp.com address or custom DNS of your server.",
            "required": true
        },
        "BUILDPACK_PRELAUNCH_METEOR": {
            "description": "Workaround for compiling SASS",
            "value": "1"
        }
    }
}
